{
    "watch": [
        "src/**/*.js",
        "src/**/*.html",
        "src/**/*.css",
        "src/**/*.json"
    ],
    "ignore": [
        "node_modules/**/*",
        "build/**/*"
    ],
    "ext": "js,html,css,json",
    "ignore_watch": [
        "**/node_modules/**/*"
    ],
    "delay": 1000,
    "env": {
        "NODE_ENV": "development"
    }
}