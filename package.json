{
  "name": "chat-app",
  "version": "1.2.0",
  "author": "Kamuxx",
  "description": "ChatApp is one application in electron with React",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:css && nodemon --exec \"npx electron .\"",
    "build:css": "tailwindcss -i ./src/assets/input.css -o ./src/assets/output.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "Electronjs",
    "React",
    "node",
    "chatapp",
    "course"
  ],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^40.0.0",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^1.0.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "electron-builder": "^26.8.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.8.3",
    "tailwindcss": "^4.1.18"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Kamuxx",
      "repo": "chatapp-electron"
    }
  ],
  "build": {
    "appId": "com.lrodsystem.autoupdater",
    "productName": "ChatApp",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamuxx/chatapp-electron.git"
  }
}
